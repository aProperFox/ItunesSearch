<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    <item name="android:textColorSecondary">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="AppTheme.TextAppearance.CardTitle">
    <item name="android:textSize">@dimen/text_size_card_title</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.TextAppearance.CardContent">
    <item name="android:textSize">@dimen/text_size_card_content</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.TextAppearance.Header">
    <item name="android:textSize">@dimen/text_size_header</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.TextAppearance.Search">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">@dimen/text_size_card_title</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
